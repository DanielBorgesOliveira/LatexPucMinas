\newcommand{\simbolo}[3]
{%
	% Adiciona o simbolo na lista de simbolos e exibe o simbolo no texto.
	\ifthenelse{\equal{#3}{1}}%
	{\hyperlink{simbolo}{#1} = #2\refstepcounter{simbolo}\addtocontents{list1}{\protect #1 \ -- \ #2 \\}}%
	{% Cita o simbolo no format "simbolo (descrição)" e adiciona na lista de simbolos.
		\ifthenelse{\equal{#3}{2}}%
		{\MakeLowercase{#2} (\hyperlink{simbolo}{#1})\refstepcounter{simbolo}\addtocontents{list1}{\protect #1 \ -- \ #2 \\}}%
		{% Somente cita o simbolo já adicionado
			\ifthenelse{\equal{#3}{0}}%
			{\hyperlink{simbolo}{#1}}%
		}%
	}%
}%

